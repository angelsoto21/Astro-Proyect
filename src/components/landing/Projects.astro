---
import projects from "../../config/projects.json"
---
<h2 class="font-bold text-5xl my-7 text-center">Projects</h2>
{
    projects.projects.map(value => (
        <div class="flex text-center md:text-left">
            <div class="flex-1">
                <h2 class="font-bold text-2xl my-4">{value.title}</h2>
                <p class="text-justify my-2">{value.description}</p>
                <button class="bg-indigo-500 px-3 py-2">More info</button>
            </div>
            <div class="flex-1">
                <img src={value.image} class="w-72 m-auto">
            </div>
        </div>
    ))
}
